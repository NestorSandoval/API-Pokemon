---
const links = [
    {href: '/', text: 'Listado'},
    {href: '/pokemons/1', text: 'Paginado'},
    {href: '/favorites', text: 'Favoritos'},
]

const currentPath = Astro.url.pathname
---

<nav class="shadow bg-slate-900">
    <div class="container flex items-center justify-center p-5 mx-auto text-gray-600 capitalize dark:text-gray-300 font-semibold">
{       
    links.map(({href, text}) => 
    <div>
        <a 
         href={href} 
         class="text-gray-800 dark:text-gray-200 mx-10 sm:mx-6"> 
        {text}
        </a>

        {
            currentPath === href ? (
                <div 
                transition:name="menu-line"
                class="border-b-2 border-blue-500 mx-4"/>
            ): (
                <div class="border-b-2 border-transparent"/>
            )
        }     
    </div>
    )
}
    </div>
</nav>