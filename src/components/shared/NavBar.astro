---
const links = [
  { href: '/', text: 'Listado' },
  { href: '/pokemons/1', text: 'Paginado' },
  {href: '/favorites', text: 'favoritos'}
];

const currentPath = Astro.url.pathname;
const isPagination = currentPath.startsWith("/pokemons/")
---

<nav class="shadow bg-red-600">
  <div
    class="container flex items-center justify-center p-6 mx-auto text-gray-600 capitalize dark:text-gray-300"
  >

    {
      links.map(({ href, text }) => (
        <div class="relative">
          <a
            href={href}
            class="text-gray-800 dark:text-gray-200 mx-1.5 sm:mx-6"
          >
            {text}
          </a>

          {(currentPath === href || (text === "Paginado" && isPagination)) ? (
            <div
              transition:name="menu-line"
              class="border-b-2 border-yellow-500 mx-4"
            />
          ) : (
            <div class="border-b-2 border-transparent" />
          )}
        
        </div>
      ))
    }
  </div>
</nav>