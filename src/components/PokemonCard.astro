---
interface Props {
  url: string;
  name: string;
  isBig?: boolean;
}

const { name, url, isBig = false } = Astro.props;
const id = url.split('/').at(-2);
const imageSrc = `https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/other/official-artwork/${id}.png`;
---

<a
  href={`/pokemons/${name}`}
  class:list={[
    `rounded flex flex-col justify-center items-center p-1 mt-5`,
    {
      border: !isBig,
    },
  ]}
>

  <img
    transition:name={`${name}-image`}
    class:list={[
      {
        'w-26 h-26': isBig,
        'w-22 h-22': !isBig, 
      },
    ]}
    src={imageSrc}
    alt={name}
  />

  <span
    class:list={[
      'capitalize',
      {
        'text-4xl text-blue-300': isBig,
      },
    ]}>#{id} {name}</span
  >
</a>